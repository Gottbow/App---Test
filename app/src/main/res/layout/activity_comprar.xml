<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Comprar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Comprar">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="163dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="13dp"
            android:text="Selecciona un metodo de pago" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="162dp"
            android:layout_height="48dp"
            android:layout_alignStart="@+id/et11"
            android:layout_alignTop="@+id/tv1"
            android:text="Fecha de caducidad y codigo de seguridad" />

        <EditText
            android:id="@+id/et7"
            android:layout_width="126dp"
            android:layout_height="34dp"
            android:layout_below="@+id/tv4"
            android:layout_alignStart="@+id/et2"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/et1"
            android:layout_alignStart="@+id/tv1"
            android:layout_marginBottom="-177dp"
            android:text="Numero de tarjeta" />

        <EditText
            android:id="@+id/et11"
            android:layout_width="137dp"
            android:layout_height="31dp"
            android:layout_below="@+id/tv9"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-109dp"
            android:layout_marginEnd="42dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et5"
            android:layout_width="84dp"
            android:layout_height="35dp"
            android:layout_below="@+id/tv4"
            android:layout_alignStart="@+id/tv1"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv1"
            android:layout_centerVertical="true"
            android:text="Nombre" />

        <TextView
            android:id="@+id/tv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/et2"
            android:layout_centerVertical="true"
            android:text="Localidad" />

        <TextView
            android:id="@+id/tv8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/et2"
            android:layout_alignTop="@+id/tv7"
            android:text="Codigo postal o zip" />

        <EditText
            android:id="@+id/et10"
            android:layout_width="159dp"
            android:layout_height="33dp"
            android:layout_below="@+id/tv9"
            android:layout_alignStart="@+id/tv1"
            android:layout_marginTop="-109dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="114dp"
            android:text="Apellidos" />

        <EditText
            android:id="@+id/et4"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/et2"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="26dp"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/et6"
            android:layout_width="69dp"
            android:layout_height="35dp"
            android:layout_alignStart="@+id/tv5"
            android:layout_alignTop="@+id/et5"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et2"
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/et11"
            android:layout_alignBottom="@+id/rb2"
            android:ems="10"
            android:inputType="date" />

        <TextView
            android:id="@+id/tv9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv1"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="109dp"
            android:text="Pais" />

        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="54dp"
            android:text="Visa" />

        <TextView
            android:id="@+id/tv7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv1"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="178dp"
            android:text="Direccion" />

        <EditText
            android:id="@+id/et8"
            android:layout_width="161dp"
            android:layout_height="36dp"
            android:layout_below="@+id/tv7"
            android:layout_alignEnd="@+id/tv1"
            android:layout_marginTop="-178dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/tv10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/et2"
            android:layout_alignTop="@+id/tv9"
            android:text="Telefono" />

        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/rb1"
            android:layout_alignParentTop="true"
            android:layout_marginTop="95dp"
            android:text="Martercard" />

        <EditText
            android:id="@+id/et1"
            android:layout_width="129dp"
            android:layout_height="36dp"
            android:layout_alignStart="@+id/tv1"
            android:layout_alignParentTop="true"
            android:layout_marginTop="177dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et3"
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/et2"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="96dp"
            android:ems="10"
            android:inputType="date" />

        <EditText
            android:id="@+id/et9"
            android:layout_width="129dp"
            android:layout_height="36dp"
            android:layout_alignStart="@+id/tv2"
            android:layout_alignBottom="@+id/et8"
            android:ems="10"
            android:inputType="textPostalAddress" />

        <Button
            android:id="@+id/btncancelar"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv1"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:text="cancelar pago" />

        <Button
            android:id="@+id/btncompletar"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btncancelar"
            android:layout_alignEnd="@+id/et7"
            android:text="Completar pago" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>